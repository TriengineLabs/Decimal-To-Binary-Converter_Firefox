{

  "manifest_version": 2,
  "name": "Decimal To Binary Converter",
  "version": "0.0.1",

  "description": "Converts Decimal numbers to binary",
  "homepage_url": "triengine.ml",
  "icons": {
    "48": "icons/detailed.png"
    
  },

  "applications": {
    "gecko": {
      "id": "triengine@mozilla.org",
      "strict_min_version": "40.0.0"
    }
  },

  "permissions": [
    "activeTab"
  ],  

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "DecToBin",
    "default_popup": "popup/dectobin.html"
  }
}